<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context="com.meest.Fragments.CampaignViewGenderTabFragment">

    <TextView
        android:id="@+id/txt_women"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Women"
        android:textSize="18dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="30dp" />

    <ProgressBar
        android:id="@+id/proBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="400dp"
        android:max="100"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txt_women"
        android:indeterminate="false"
        android:progress="70" />


    <TextView
        android:id="@+id/txt_engagement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Engagement"
        android:textSize="15dp"
        android:layout_below="@+id/proBar"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/txt_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cost per Post Engagement"
        android:textSize="15dp"
        android:layout_below="@+id/txt_engagement"
        android:layout_marginStart="22dp"
        android:layout_marginTop="5dp"
        />


    <TextView
        android:id="@+id/txt_reached"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reached"
        android:textSize="15dp"
        android:layout_below="@+id/txt_cost"
        android:layout_marginStart="22dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_toRightOf="@+id/txt_engagement"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_marginRight="22dp"
        android:layout_below="@+id/proBar"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:id="@+id/txt_rsAmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_toRightOf="@+id/txt_cost"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_marginRight="22dp"
        android:layout_below="@+id/txt_1"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/txt_tvNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_toRightOf="@+id/txt_reached"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_marginRight="22dp"
        android:layout_below="@+id/txt_rsAmt"
        android:layout_marginTop="5dp"
        />

    //////////////////


    <TextView
        android:id="@+id/txt_men"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Men"
        android:textSize="18dp"
        android:layout_below="@+id/txt_reached"
        android:layout_marginStart="22dp"
        android:layout_marginTop="30dp"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="400dp"
        android:max="100"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txt_men"
        android:indeterminate="false"
        android:progress="70" />



    <TextView
        android:id="@+id/txt_eng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Engagement"
        android:textSize="15dp"
        android:layout_below="@+id/progressBar"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/txt_cos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cost per Post Engagement"
        android:textSize="15dp"
        android:layout_below="@+id/txt_eng"
        android:layout_marginStart="22dp"
        android:layout_marginTop="5dp"
        />


    <TextView
        android:id="@+id/txt_reac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reached"
        android:textSize="15dp"
        android:layout_below="@+id/txt_cos"
        android:layout_marginStart="22dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_toRightOf="@+id/txt_eng"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_marginRight="22dp"
        android:layout_below="@+id/progressBar"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:id="@+id/txt_rsAm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_toRightOf="@+id/txt_cos"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_marginRight="22dp"
        android:layout_below="@+id/txt1"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/txt_tvN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_toRightOf="@+id/txt_reac"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_marginRight="22dp"
        android:layout_below="@+id/txt_rsAm"
        android:layout_marginTop="5dp"
        />

</RelativeLayout>