<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputTextRL"
        android:orientation="horizontal">

        <Button
            android:id="@+id/okBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="17dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="29dp"
            android:layout_weight="1"
            android:background="@drawable/follow_btn_bg"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="17dp"
            android:layout_marginTop="29dp"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:background="@drawable/follow_btn_bg"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/Feedback_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">


        <TextView
            android:id="@+id/headerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="19dp"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="19dp"
            android:layout_toEndOf="@+id/img_back_arrow_feedback"
            android:text="@string/sendFeedback"
            android:textColor="#1E2432"
            android:textSize="19sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/headerText"
            android:background="#0D000000" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/inputTextRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Feedback_header"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/bg_feedback_box">


        <TextView
            android:id="@+id/userFeedbackEt"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:layout_marginBottom="10dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:ems="10"
            android:gravity="start|top"
            android:maxLength="200"
            android:maxLines="4"
            android:textColorHint="#898989"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>