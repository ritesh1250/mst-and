<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/reactions_bg"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_3dp"
            android:weightSum="4">

            <ImageView
                android:id="@+id/react_heart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="@dimen/size_5dp"
                android:layout_weight="1"
                android:src="@drawable/reaction_heart" />

            <ImageView
                android:id="@+id/react_laugh"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="@dimen/size_5dp"
                android:layout_weight="1"
                android:src="@drawable/reaction_laugh" />

            <ImageView
                android:id="@+id/react_cry"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="@dimen/size_5dp"
                android:layout_weight="1"
                android:src="@drawable/reaction_cry" />

            <ImageView
                android:id="@+id/react_angry"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="@dimen/size_5dp"
                android:layout_weight="1"
                android:src="@drawable/reaction_angry" />


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>