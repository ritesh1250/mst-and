<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/rl_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_35sdp"
        android:gravity="center"
        android:padding="@dimen/_20sp">

        <ImageView
            android:id="@+id/img_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/tv_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_up"
            android:text="@string/Up"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_up"
            android:layout_marginTop="@dimen/_12sp"
            android:text="@string/Your_Life"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_text"
        android:gravity="center"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/rl_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_alignParentStart="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingStart="@dimen/_18sp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_toEndOf="@+id/rl_create">
                <ImageView
                    android:id="@+id/img_rec1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/JoinandCreate"
                    android:textStyle="bold"
                    android:textSize="@dimen/_23sp"
                    android:layout_below="@+id/img_rec1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/JoinandCreatetxt"
                    android:textStyle="bold"
                    android:lines="4"
                    android:textSize="@dimen/_13sp"
                    android:textColor="@color/greytext"
                    android:layout_below="@+id/tv_create"/>
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="25dp"
                android:layout_toStartOf="@+id/rl_connect1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_connect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/JoinandConnecttxt"
                    android:textStyle="bold"
                    android:textSize="@dimen/_23sp"
                    android:textColor="@color/blue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/JoinandConnect"
                    android:layout_below="@+id/tv_connect"
                    android:textStyle="bold"
                    android:lines="5"
                    android:textSize="@dimen/_13sp"
                    android:textColor="@color/greytext"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_connect1"
                android:layout_width="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>