<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"  android:layoutDirection="ltr">

    <data>

    </data>

    <LinearLayout
        android:layout_width="@dimen/_240sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_round_alert_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:gravity="center"
            android:text="@string/do_you_want_to_save_changes"
            android:textColor="@color/new_action_color"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvYes"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="25dp"
                android:background="@drawable/upload_gray_btn"
                android:backgroundTint="@color/new_action_color"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/yes"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNo"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="25dp"
                android:layout_marginStart="@dimen/_30sdp"
                android:background="@drawable/round_corner_gradient"
                android:includeFontPadding="false"
                android:gravity="center"
                android:text="@string/no"
                android:textColor="@color/new_action_color"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</layout>