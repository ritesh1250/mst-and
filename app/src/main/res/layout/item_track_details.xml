<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"  android:layoutDirection="ltr">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_img_view"
        android:layout_width="@dimen/_54sdp"
        android:layout_height="@dimen/_54sdp"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_13sdp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="@dimen/_54sdp"
            android:layout_height="@dimen/_54sdp">

            <ImageView
                android:id="@+id/imv_track"
                android:layout_width="@dimen/_54sdp"
                android:layout_height="@dimen/_54sdp"
                android:background="@color/gray"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/img_circle_pause"
                android:layout_width="@dimen/_44sdp"
                android:layout_height="@dimen/_44sdp"
                android:layout_margin="@dimen/_5sdp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_pause_circle"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/music_progress"
                android:layout_width="@dimen/_54sdp"
                android:layout_height="@dimen/_54sdp"
                android:layout_centerInParent="true"
                android:visibility="gone"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/card_img_view">

        <TextView
            android:id="@+id/txt_title_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18.85dp"
            android:layout_marginTop="@dimen/_22sdp"
            android:text="Title"
            android:textColor="#AAAAAA"
            android:textSize="@dimen/_16sdp" />

        <TextView
            android:id="@+id/txt_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_title_track"
            android:layout_marginLeft="18.85dp"
            android:text="description"
            android:textColor="#AAAAAA"
            android:textSize="15dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/txt_singer"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_23sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/audio_use"
            android:layout_width="@dimen/_66sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/ic_imagebackgroud"
            android:text="Use"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>