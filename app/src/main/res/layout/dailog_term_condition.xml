<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"  android:layoutDirection="ltr">
    <data>

        <variable
            name="model"
            type="com.meest.videomvvmmodule.utils.Dialog1" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_corner_15"
        android:backgroundTint="@color/white"
        android:gravity="center_horizontal"
        android:minWidth="270dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:minWidth="200dp"
            android:paddingHorizontal="10dp"
            android:text="@string/please_agree_our_term_amp_conditions_and_privacy_policy"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="35sp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_medley_logo"
            android:textColor="@color/colorOrange" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/tv_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingStart="0dp"
                android:paddingEnd="15dp"
                android:text="@string/term_of_use"
                android:textColor="@color/colorOrange" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginVertical="5dp"
                android:background="@color/colorOrange" />

            <TextView
                android:id="@+id/tv_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingStart="15dp"
                android:paddingEnd="0dp"
                android:text="@string/privacy_policy"
                android:textColor="@color/colorOrange" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_white_bottom_15"
            android:backgroundTint="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/color_text_light" />

            <TextView
                android:id="@+id/tv_positive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/agree"
                android:textColor="@color/colorOrange" />

        </LinearLayout>


    </LinearLayout>
</layout>