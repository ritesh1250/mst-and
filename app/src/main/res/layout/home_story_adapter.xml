<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="wrap_content"
android:layout_marginRight="@dimen/_3sdp"
android:layout_height="wrap_content">

<androidx.cardview.widget.CardView
    android:id="@+id/cvMain"
    android:layout_margin="@dimen/_2sdp"
    android:layout_width="@dimen/_55sdp"
    android:layout_height="@dimen/_76sdp"
    app:cardCornerRadius="@dimen/_18sdp"
    android:elevation="0dp"
    app:cardElevation="0dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <ImageView
        android:id="@+id/story_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/chat_user_placeholder"
        />
</androidx.cardview.widget.CardView>


<TextView
    android:id="@+id/txt_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_3sdp"
    android:text="UserName"
    android:maxLength="10"
    android:ellipsize="end"
    android:maxLines="1"
    android:textSize="12sp"
    android:textColor="@color/app_bar_text"
    android:gravity="center"
    app:layout_constraintEnd_toEndOf="@+id/cvMain"
    app:layout_constraintStart_toStartOf="@+id/cvMain"
    app:layout_constraintTop_toBottomOf="@+id/cvMain" />


</androidx.constraintlayout.widget.ConstraintLayout>

