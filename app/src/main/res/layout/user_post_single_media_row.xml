    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_13sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--  <androidx.cardview.widget.CardView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:cardCornerRadius="10dp">

                  <View
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@drawable/gradient_background" />

          -->


            <LinearLayout
                android:id="@+id/liReShareOtherData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_topline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/topline"
                    tools:ignore="ContentDescription" />

                <RelativeLayout
                    android:id="@+id/relPost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="-6dp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="center_vertical">

                    <RelativeLayout
                        android:id="@+id/profile_layout"
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="@dimen/_36sdp">


                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_36sdp"
                            android:layout_height="@dimen/_36sdp"
                            app:cardBackgroundColor="@color/gray"
                            app:cardCornerRadius="@dimen/_12sdp">

                            <ImageView
                                android:id="@+id/img_profile"
                                android:layout_width="@dimen/_36sdp"
                                android:layout_height="@dimen/_36sdp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/profile_bg"
                                tools:ignore="ContentDescription">

                            </ImageView>

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/img_profile_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toStartOf="@+id/img_menu"
                        android:layout_toEndOf="@+id/profile_layout"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_usernsme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:text="Spider"
                            android:textColor="#000000"
                            android:textSize="16sp" />


                        <LinearLayout
                            android:id="@+id/feeling_post_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_usernsme"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/_5sdp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:id="@+id/imvFeelIcon"
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"/>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/_5sdp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:id="@+id/imvActivityIcon"
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:layout_marginStart="3dp" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/feeling1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#696969"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/feeling_post_layout"
                            android:text="12 April 2019 at 10:47 AM"
                            android:textColor="#9597A1"
                            android:textSize="12sp" />

                    </RelativeLayout>


                    <ImageView
                        android:id="@+id/img_menu"
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:padding="@dimen/_12sdp"
                        android:src="@drawable/ghterr"
                        tools:ignore="ContentDescription" />


                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/linReShare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:id="@+id/divider6"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="?android:attr/listDivider" />

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_24sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:gravity="center_vertical">

                        <RelativeLayout
                            android:id="@+id/profile_layout_re_share"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp">


                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                app:cardBackgroundColor="@color/gray"
                                app:cardCornerRadius="@dimen/_10sdp">

                                <ImageView
                                    android:id="@+id/img_profile_re_share"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/profile_bg"
                                    tools:ignore="ContentDescription">

                                </ImageView>

                            </androidx.cardview.widget.CardView>


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/img_profile_layout_re_share"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_toEndOf="@+id/profile_layout_re_share"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_usernsme_re_share"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:singleLine="true"
                                android:text="Spider"
                                android:textColor="#000000"
                                android:textSize="12sp" />


                            <TextView
                                android:id="@+id/txt_time_re_share"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txt_usernsme_re_share"
                                android:text="12 April 2019 at 10:47 AM"
                                android:textColor="#9597A1"
                                android:textSize="8sp" />

                        </RelativeLayout>


                    </RelativeLayout>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp">

                    <FrameLayout
                        android:id="@+id/playerContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/black"
                        android:minHeight="@dimen/_150sdp">

                        <ProgressBar
                            android:id="@+id/progressBar"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:visibility="gone" />


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imageVideoThumbnail"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_300sdp"
                            android:visibility="gone" />

                        <com.master.exoplayer.MasterExoPlayer
                            android:id="@+id/frame"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_300sdp"
                            android:visibility="gone"/>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/exo_fullscreen_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="right|bottom"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="@dimen/_24sdp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_fullscreen_open" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/profile_bg"
                            android:visibility="gone" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivVolume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:padding="8dp"
                            android:visibility="visible"
                            app:srcCompat="@drawable/volume_off_24" />

                        <RelativeLayout
                            android:id="@+id/sensitive_content_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/sensitive_background"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:ignore="ContentDescription" />


                            <TextView
                                android:id="@+id/sensitive_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:drawablePadding="8dp"
                                android:text="@string/sensitive_content2"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:visibility="visible"
                                app:drawableTopCompat="@drawable/ic_sensitive_eye" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/sensitive_text"
                                android:layout_centerHorizontal="true"
                                android:layout_marginHorizontal="12dp"
                                android:gravity="center"
                                android:text="@string/this_post_may_contain_graphic_or_violent_content"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/see_post_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="8dp"
                                android:text="@string/see_post"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/liViewsVideoCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|bottom"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivVideoViewsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|end"
                                android:padding="8dp"
                                android:src="@drawable/view_white"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="100K"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                android:visibility="visible" />

                        </LinearLayout>


                    </FrameLayout>

                    <ImageView
                        android:id="@+id/iv_tag"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_tagged" />

                    <TextView
                        android:id="@+id/postText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:minHeight="@dimen/_100sdp"
                        android:padding="@dimen/_10sdp"
                        android:textAlignment="center"
                        android:textSize="25sp"
                        android:visibility="gone" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/pager_dots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:visibility="gone">

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/txt_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="16dp"
                        android:layout_toStartOf="@+id/img_save"
                        android:text="I love this place to visit again \nI love this place to visit again"
                        android:textColor="#7E7E7E"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/img_post_save"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:src="@drawable/ic_bookmark_outline"
                        tools:ignore="ContentDescription" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/loading"
                        android:layout_width="16dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:visibility="gone" />

                </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp">

                    <LinearLayout
                        android:id="@+id/layout_like_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="visible">

                            <RelativeLayout
                                android:id="@+id/likeUser1"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"
                                android:layout_margin="@dimen/_1sdp"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_22sdp"
                                    android:layout_height="@dimen/_22sdp"
                                    android:layout_centerInParent="true"
                                    android:visibility="visible"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="@dimen/_6sdp"
                                    app:cardElevation="0dp">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_gravity="center"
                                        android:layout_margin="@dimen/_2sdp"
                                        app:cardBackgroundColor="@color/gray"
                                        app:cardCornerRadius="@dimen/_6sdp"
                                        app:cardElevation="@dimen/dimen_0dp">

                                        <ImageView
                                            android:id="@+id/ivLikeUser1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/image_placeholder"
                                            tools:ignore="ContentDescription">

                                        </ImageView>

                                    </androidx.cardview.widget.CardView>
                                </androidx.cardview.widget.CardView>
                            </RelativeLayout>


                            <RelativeLayout
                                android:id="@+id/likeUser2"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="@+id/likeUser1"
                                app:layout_constraintEnd_toEndOf="@+id/likeUser1"
                                app:layout_constraintStart_toEndOf="@+id/likeUser1"
                                app:layout_constraintTop_toTopOf="@+id/likeUser1">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_22sdp"
                                    android:layout_height="@dimen/_22sdp"
                                    android:layout_centerVertical="true"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="@dimen/_7sdp"
                                    app:cardElevation="@dimen/dimen_0dp">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_gravity="center"
                                        android:layout_margin="@dimen/_2sdp"
                                        app:cardBackgroundColor="@color/white"
                                        app:cardCornerRadius="@dimen/_6sdp"
                                        app:cardElevation="@dimen/dimen_0dp">

                                        <ImageView
                                            android:id="@+id/ivLikeUser2"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/image_placeholder"
                                            tools:ignore="ContentDescription">

                                        </ImageView>

                                    </androidx.cardview.widget.CardView>
                                </androidx.cardview.widget.CardView>

                            </RelativeLayout>


                            <RelativeLayout
                                android:id="@+id/likeUser3"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="@+id/likeUser2"
                                app:layout_constraintEnd_toEndOf="@+id/likeUser2"
                                app:layout_constraintStart_toEndOf="@+id/likeUser2"
                                app:layout_constraintTop_toTopOf="@+id/likeUser2">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_22sdp"
                                    android:layout_height="@dimen/_22sdp"
                                    android:layout_centerInParent="true"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="@dimen/_7sdp"
                                    app:cardElevation="@dimen/dimen_0dp">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_gravity="center"
                                        android:layout_margin="@dimen/_2sdp"
                                        app:cardBackgroundColor="@color/gray"
                                        app:cardCornerRadius="@dimen/_6sdp"
                                        app:cardElevation="@dimen/dimen_0dp">

                                        <ImageView
                                            android:id="@+id/ivLikeUser3"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/image_placeholder"
                                            tools:ignore="ContentDescription">

                                        </ImageView>

                                    </androidx.cardview.widget.CardView>
                                </androidx.cardview.widget.CardView>
                            </RelativeLayout>


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:id="@+id/layout_likes_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_1sdp"
                                android:text="@string/liked_by"
                                android:visibility="gone"
                                android:singleLine="true"
                                android:textColor="#7E7E7E"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/txt_recent_user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_1sdp"
                                android:singleLine="true"
                                android:maxLength="12"
                                android:textColor="#000000"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/and_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_1sdp"
                                android:text="@string/and"
                                android:singleLine="true"
                                android:textColor="#7E7E7E"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/text_others_like"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_1sdp"
                                android:text="@string/others"
                                android:singleLine="true"
                                android:textColor="#000000"
                                android:textSize="12sp" />


                        </LinearLayout>


                        <!--                    <ImageView-->
                        <!--                        android:layout_width="30dp"-->
                        <!--                        android:layout_height="30dp"-->
                        <!--                        android:padding="@dimen/_2sdp"-->
                        <!--                        android:src="@drawable/diamond_filled" />-->

                        <TextView
                            android:id="@+id/txt_like_users"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_1sdp"
                            android:text=""
                            android:textColor="@color/gray_dark"
                            android:textSize="12sp"
                            android:textStyle="bold" />


                    </LinearLayout>
                </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/liComment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_5sdp"
                            android:layout_height="@dimen/_5sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:layout_marginRight="@dimen/_3sdp"
                            android:elevation="2dp"
                            android:src="@drawable/ic_gradient_circle" />

                        <TextView
                            android:id="@+id/txt_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/comment"
                            android:singleLine="true"
                            android:textColor="@color/text_grey"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/share"
                            android:textColor="@color/text_grey"
                            android:textSize="12sp"
                            android:visibility="gone" />

                    </LinearLayout>
            </LinearLayout>

                <LinearLayout
                    android:id="@+id/linBottomReShare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:orientation="horizontal"
