<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.meest.medley_camera2.camera2.viewmodels.MeestCameraFragmentViewModel" />

    </data>

    <RelativeLayout
        android:id="@+id/camera_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.meest.medley_camera2.camera2.cameraUtils.AutoFitTextureView
            android:id="@+id/texture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <com.meest.medley_camera2.camera2.cameraUtils.FocusView
            android:id="@+id/focusView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:visibility="gone" />

        <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--    Two Vertical Grid Layout-->
            <LinearLayout
                android:id="@+id/grid2Layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/twoGridImage1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="matrix" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/white" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/twoGridImage2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:alpha="1"
                    android:scaleType="matrix"
                    android:src="@drawable/transparent_image" />

            </LinearLayout>

            <!--    Three Grid Layout-->
            <LinearLayout
                android:id="@+id/grid3Layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/threeGridImage1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="matrix" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/white" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/threeGridImage2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:alpha="1"
                    android:scaleType="matrix"
                    android:src="@drawable/transparent_image" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/white" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/threeGridImage3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:alpha="1"
                    android:scaleType="matrix"
                    android:src="@drawable/transparent_image" />

            </LinearLayout>

            <!--    Four Grid Layout-->
            <LinearLayout
                android:id="@+id/grid4Layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/fourGridImage1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="matrix" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/white" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/fourGridImage2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="1"
                        android:scaleType="matrix"
                        android:src="@drawable/transparent_image" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/fourGridImage3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="1"
                        android:scaleType="matrix"
                        android:src="@drawable/transparent_image" />

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/white" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/fourGridImage4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="1"
                        android:scaleType="matrix"
                        android:src="@drawable/transparent_image" />
                </LinearLayout>

            </LinearLayout>

            <!--    Six Grid Layout-->
            <LinearLayout
                android:id="@+id/grid6Layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/sixGridImage1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="matrix" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/white" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/sixGridImage2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="1"
                        android:scaleType="matrix"
                        android:src="@drawable/transparent_image" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/sixGridImage3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="1"
                        android:scaleType="matrix"
                        android:src="@drawable/transparent_image" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/white" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/sixGridImage4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="1"
                        android:scaleType="matrix"
                        android:src="@drawable/transparent_image" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/sixGridImage5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="1"
                        android:scaleType="matrix"
                        android:src="@drawable/transparent_image" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/white" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/sixGridImage6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="1"
                        android:scaleType="matrix"
                        android:src="@drawable/transparent_image" />
                </LinearLayout>

            </LinearLayout>


            <!--    Two Horizontal Grid Layout-->
            <LinearLayout
                android:id="@+id/grid2LayoutHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/twoGridImage1Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="matrix" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/white" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/twoGridImage2Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:alpha="1"
                    android:background="@drawable/transparent_image"
                    android:scaleType="matrix" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal"
            android:padding="5dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/handsFreeImage1"
                android:layout_width="80dp"
                android:layout_height="60dp"

                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/handsFreeImage2"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/handsFreeImage3"
                android:layout_width="60dp"
                android:layout_height="60dp" />

        </LinearLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:padding="@dimen/_10sdp"
            android:visibility="gone"
            />

    </RelativeLayout>


</layout>

