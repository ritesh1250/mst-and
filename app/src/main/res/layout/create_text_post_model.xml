<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="createTextPostModel"
            type="com.meest.social.socialViewModel.viewModel.createTextPostViewModel.CreateTextPostViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="ltr"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/appBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:elevation="2dp">

                    <RelativeLayout
                        android:id="@+id/create_post_header"
                        android:layout_width="match_parent"
                        android:layout_height="?android:attr/actionBarSize"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="@dimen/_6sdp">

                        <ImageView
                            android:id="@+id/img_back_arrow_craete_text_post"
                            android:layout_width="?android:attr/actionBarSize"
                            android:layout_height="?android:attr/actionBarSize"
                            android:layout_centerVertical="true"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:padding="@dimen/_15sdp"
                            android:src="@drawable/ic_back_arrow"
                            app:tint="@color/app_bar_text"
                            tools:ignore="ContentDescription" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toLeftOf="@+id/btn_post_submit"
                            android:layout_toRightOf="@+id/img_back_arrow_craete_text_post"
                            android:includeFontPadding="false"
                            android:text="@string/create_post"
                            android:textColor="@color/app_bar_text"
                            android:textSize="22sp" />

                        <Button
                            android:id="@+id/btn_post_submit"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_28sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:background="@drawable/edit_btn_round"
                            android:includeFontPadding="false"
                            android:paddingLeft="@dimen/_16sdp"
                            android:paddingRight="@dimen/_16sdp"
                            android:text="@string/post"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="RelativeOverlap" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!--                <androidx.cardview.widget.CardView-->
                <!--                    android:layout_width="50dp"-->
                <!--                    android:layout_height="50dp"/>-->


                <RelativeLayout
                    android:id="@+id/view_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/appBar"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_16sdp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@id/d"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/user_name_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sp"
                        android:layout_toRightOf="@+id/c"
