                        android:textColor="@color/black"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_const"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_name_post"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="@dimen/_10sp"
                        android:layout_marginRight="@dimen/_6sdp"
                        android:layout_toRightOf="@+id/c"
                        android:text="@string/who_can_view_this_post"
                        android:textColor="#B2151624"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/public_icon"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_below="@+id/user_name_post"
                        android:layout_toLeftOf="@+id/post_visibility"
                        android:layout_alignParentBottom="true"
