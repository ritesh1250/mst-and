<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/Widget.Demo.BottomSheet"
    android:id="@+id/layoutBottomSheet"
     android:layoutDirection="ltr"
    android:background="#F9F9F9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/user2345"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:id="@+id/txt_username"
            android:layout_marginRight="@dimen/_1sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="test"
            android:textSize="13sp"
            android:layout_toRightOf="@+id/txt_username"
            android:layout_marginRight="@dimen/_10sdp"/>




    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:text="#User"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:id="@+id/txt_has_tag"
        android:layout_marginRight="@dimen/_1sdp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:text="@string/view_comments"
        android:textStyle="bold"

        android:textSize="13sp"
        android:textColor="#858595"
        android:layout_marginRight="@dimen/_1sdp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/comment_bg"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_height="wrap_content">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:hint="@string/Comment"
            android:layout_toLeftOf="@+id/img_sent"
            android:paddingLeft="@dimen/_10sdp"
            android:textColor="#858595"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/_20sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/img_sent"
            android:paddingRight="@dimen/_20sdp"
            android:src="@drawable/ic_sent_msg_icon"/>

    </RelativeLayout>



</LinearLayout>