<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr">

    <HorizontalScrollView
        android:id="@+id/hsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:gravity="center"
        android:scrollbars="none" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/outline"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/option"
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:padding="3dp"
                            android:src="@drawable/icon_1"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="@dimen/_28ssp"
                        android:background="@drawable/hashtaground"
                        android:gravity="center"
                        android:text="@string/Travel"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/outline"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:padding="3dp"
                            android:src="@drawable/icon_1"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="80dip"
                        android:layout_height="@dimen/_28ssp"
                        android:background="@drawable/movies"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="@string/Movie"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/outline"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:padding="3dp"
                            android:src="@drawable/icon_1"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="80dip"
                        android:layout_height="@dimen/_28ssp"
                        android:background="@drawable/follow"
                        android:gravity="center"
                        android:text="@string/Food"
                        android:layout_marginTop="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/outline"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:padding="3dp"
                            android:src="@drawable/icon_1"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="80dip"
                        android:layout_height="@dimen/_28ssp"
                        android:background="@drawable/food"
                        android:gravity="center"
                        android:text="@string/Arts"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/outline"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:padding="3dp"
                            android:src="@drawable/icon_1"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="80dip"
                        android:layout_height="@dimen/_28ssp"
                        android:background="@drawable/photography"
                        android:gravity="center"
                        android:text="@string/Photography"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/_14ssp"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/outline"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:padding="3dp"
                            android:src="@drawable/icon_1"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="80dip"
                        android:layout_height="@dimen/_28ssp"
                        android:background="@drawable/photography"
                        android:gravity="center"
                        android:text="@string/Photography"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="5dp"
                        android:visibility="visible"
                        android:textSize="@dimen/_14ssp"
                        android:singleLine="true"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hashtag_recycleView"
        android:layout_width="match_parent"
        android:layout_below="@+id/hsv"
        android:layout_height="match_parent"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18sp"
        android:id="@+id/not_found"
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        android:text="@string/Video_not_found" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading"
        android:layout_width="@dimen/_100sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_height="@dimen/_100sdp" />

</RelativeLayout>