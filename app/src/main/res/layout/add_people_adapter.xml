<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_main"
    android:layoutDirection="ltr"
    android:padding="@dimen/_10sdp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_images"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/user_pro_chat"
            android:src="@drawable/user_pro_chat"/>




    </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Dianna Smiley"

            android:layout_toLeftOf="@+id/time"
            android:layout_centerVertical="true"
            android:id="@+id/txt_user_name"
            android:layout_toRightOf="@+id/layout_images"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="#151624"/>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_alignParentRight="true"
        android:id="@+id/layout_add"
        >

       <ImageView
           android:layout_width="@dimen/_30sdp"
           android:id="@+id/img_add_people"
           android:layout_height="@dimen/_30sdp"
           android:src="@drawable/ic_addpeople_icons"/>

    </LinearLayout>


</RelativeLayout>