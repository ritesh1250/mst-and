<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/music_track_background"
    android:layout_height="match_parent"
    android:layoutDirection="ltr">

    <!-- TODO: Update blank fragment layout -->

    <androidx.cardview.widget.CardView
        android:id="@+id/rel_track_detail"
        android:layout_width="@dimen/_375sdp"
        android:layout_height="@dimen/_108sdp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow"
            android:layout_marginLeft="26.36dp"
            android:layout_marginTop="30.02dp"

            />

        <ImageView
            android:id="@+id/image_trackBackground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_108sdp"
            android:scaleType="fitXY"
            android:background="@drawable/music_track_background"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Psxcho Logic"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:layout_below="@+id/rel_track_detail"
        android:layout_marginLeft="@dimen/_32sdp"/>

    <TextView
        android:id="@+id/txt_track_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9 Tracks"
        android:textSize="16sp"
        android:layout_marginLeft="@dimen/_32sdp"
        android:layout_below="@+id/txt_category_name"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_track_name_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txt_track_num"
        android:layout_marginTop="5dp"/>



</RelativeLayout>