<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@color/grey"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp">

                <ImageView
                    android:id="@+id/img_close"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:paddingStart="6dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:src="@drawable/close_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/create_story"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/chat_create_group_round_corner">

                    <TextView
                        android:id="@+id/text_aa"
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/white_round"
                        android:gravity="center"
                        android:text="Aa"
                        android:layout_margin="@dimen/_6sdp"
                        android:textSize="@dimen/_18sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/_16sdp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/layout_photo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/chat_create_group_round_corner"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/img_photo"
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/white_round"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_8sdp"
                        android:layout_margin="@dimen/_6sdp"
                        android:src="@drawable/camera_icon"

                        android:textSize="30sp"
                        app:tint="#444444" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_photo"
                        android:layout_centerHorizontal="true"
                        android:text="@string/photo"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/_16sdp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_video"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/chat_create_group_round_corner"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/img_video"
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/white_round"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_4sdp"
                        android:layout_margin="@dimen/_6sdp"
                        android:src="@drawable/play_arrow"
                        android:textSize="30sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_video"
                        android:layout_centerHorizontal="true"
                        android:text="@string/video"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/_16sdp"

                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_gallery"
                    android:layout_width="0dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_weight="1"
                    android:background="@drawable/create_status_bg"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/img_gallery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/white_round"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_8sdp"
                        android:src="@drawable/ic_icon_gallary"
                        android:text="Aa"
                        android:textSize="30sp"
                        app:tint="#444444" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_gallery"
                        android:layout_centerHorizontal="true"
                        android:text="@string/gallery"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading"
        android:layout_width="@dimen/_100sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_height="@dimen/_100sdp" />

</RelativeLayout>